<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.test.Models.DreamsEntity" table="dreams" schema="dreamloudPROD">
        <id name="drmId">
            <column name="DRM_ID" sql-type="int(11)"/>
        </id>
        <property name="drmName">
            <column name="DRM_NAME" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="drmBio">
            <column name="DRM_BIO" sql-type="varchar(500)" length="500"/>
        </property>
    </class>
</hibernate-mapping>
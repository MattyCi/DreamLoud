<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.test.Models.InterestsEntity" table="interests" schema="dreamloudPROD">
        <id name="intrId">
            <column name="INTR_ID" sql-type="int(11)"/>
        </id>
        <property name="intrName">
            <column name="INTR_NAME" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="intrDesc">
            <column name="INTR_DESC" sql-type="varchar(250)" length="250"/>
        </property>
        <property name="intrIcon">
            <column name="INTR_ICON" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="intrPic">
            <column name="INTR_PIC" sql-type="varchar(100)" length="100"/>
        </property>
    </class>
</hibernate-mapping>